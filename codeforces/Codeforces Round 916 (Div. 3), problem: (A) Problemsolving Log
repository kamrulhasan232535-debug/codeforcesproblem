#include <stdio.h>
#include <string.h>

int main() {
    int t;
    scanf("%d", &t); 
    while (t--) {
        int n;
        char s[1001]; 
        scanf("%d", &n);  
        scanf("%s", s);    
        int result = 0;
        for (int i = 0; i < 26; i++) {
            char current_char = 'A' + i;
            int count = 0;
            for (int j = 0; s[j] != '\0'; j++) {
                if (s[j] == current_char) {
                    count++;
                }
            }
            if (count >= i + 1) {
                result++;
            }
        }
        
        printf("%d\n", result); 
    }

    return 0;
}
