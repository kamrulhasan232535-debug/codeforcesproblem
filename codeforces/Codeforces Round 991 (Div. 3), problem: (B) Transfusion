#include <stdio.h>
#include <math.h>

int main() {
    int t;
    scanf("%d", &t);
    while (t--) {
        long long int n, sum = 0;
        scanf("%lld", &n); 
        long long int s[n];
        for (int i = 0; i < n; i++) {
            scanf("%lld", &s[i]); 
            sum += s[i];
        }
        if (sum % n == 0 && n>2) {
            long long int target = sum / n; 
            for (int i = 1; i < n - 1; i++) {
                if(s[i-1]>target){
                    long long int diff = abs(s[i-1] - target); 
                    s[i-1] -= diff;            
                    s[i + 1] += diff;
                }else{
                   long long  int diff = abs(s[i-1] - target); 
                    s[i-1] += diff;            
                    s[i + 1] -= diff;
                }
            }

            int valid = 1;
            for (int i = 0; i < n; i++) {
                if (s[i] != target) {
                    valid = 0;
                    break;
                }
            }
            if (valid) {
                printf("YES\n");
            } else {
                printf("NO\n");
            }
        } else {
            printf("NO\n");
        }
    }
    return 0;
}
