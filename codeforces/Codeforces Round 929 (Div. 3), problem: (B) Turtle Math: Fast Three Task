import java.util.Scanner;
public class Main{
    public static void main(String[] args){
        try (Scanner sc=new Scanner(System.in)){
            int t=sc.nextInt();
            while(t-->0){
                int n=sc.nextInt();
                int[] array=new int [n];
                long sum=0;
                for(int i=0; i<n; i++){
                    array[i]=sc.nextInt();
                    sum+=array[i];
                }if(sum%3==0){
                    System.out.println(0);
                }else if((sum+1)%3==0){
                    System.out.println(1);
                }else{
                    byte f=0;
                    for(int i=0; i<n;i++){
                        if((sum-array[i])%3==0){
                            f=1;
                            break;
                        }
                    }System.out.println((f==0)?2:1);
                }
            }
        }
    }
}
