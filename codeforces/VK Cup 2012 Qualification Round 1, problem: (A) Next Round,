import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        try (Scanner sc = new Scanner(System.in)) {
            int n = sc.nextInt();
            int k = sc.nextInt();
            int[] scores = new int[n];
            int count = 0;

            for (int i = 0; i < n; i++) {
                scores[i] = sc.nextInt();
            }

            int threshold = scores[k - 1];

            for (int i = 0; i < n; i++) {
                if (scores[i] >= threshold && scores[i] > 0) {
                    count++;
                }
            }

            System.out.println(count);
        }
    }
}
