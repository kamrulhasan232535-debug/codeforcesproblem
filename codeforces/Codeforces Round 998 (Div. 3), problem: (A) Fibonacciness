#include <stdio.h>

void solve() {
    long long a, b, c, d;
    scanf("%lld %lld %lld %lld", &a, &b, &c, &d);

    long long values[3];
    values[0] = d - c; 
    values[1] = c - b; 
    values[2] = a + b;
    int uniqueCount = 3;
    for (int i = 0; i < 3; i++) {
        for (int j = i + 1; j < 3; j++) {
            if (values[i] == values[j]) {
                uniqueCount--;
                break;
            }
        }
    }

    printf("%d\n", 4 - uniqueCount);
}

int main() {
    int T;
    scanf("%d", &T);
    while (T--) {
        solve();
    }
    return 0;
}
