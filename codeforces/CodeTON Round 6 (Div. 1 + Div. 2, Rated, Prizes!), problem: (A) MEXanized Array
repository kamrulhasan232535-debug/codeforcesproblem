#include <stdio.h>

int main() {
    int t;
    scanf("%d", &t);
    
    while (t--) {
        int n, k, x;
        scanf("%d %d %d", &n, &k, &x);
        if (k > n || k > x + 1) {
            printf("-1\n");
            continue;
        }

        long long sum = 0;
        for (int i = 0; i < k; i++) {
            sum += i;
        }
        int fill_value = (x == k) ? x - 1 : x;
        for (int i = k; i < n; i++) {
            sum += fill_value;
        }

        printf("%lld\n", sum);
    }

    return 0;
}
