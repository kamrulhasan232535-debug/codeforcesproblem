#include <stdio.h>
#include <string.h>

int main() {
    int t;
    scanf("%d",&t); 
    while(t--){
        char s[1001],t[1001]; 
        scanf("%s",s);       
        scanf("%s",t);
        int lcp=0;
        int n=strlen(s);
        int m=strlen(t);
        for(int i=1; i<=n && i<=m;i++) {
            if (strncmp(s,t,i)==0){
                lcp=i;
            }else{
                break;
            }
        }
        printf("%d\n",n+m-(lcp>0?lcp:1)+1);
    }

    return 0;
}
