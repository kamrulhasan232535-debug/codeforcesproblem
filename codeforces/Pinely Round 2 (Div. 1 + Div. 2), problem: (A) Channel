import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        try (Scanner sc = new Scanner(System.in)) {
            int t = sc.nextInt();
            while (t-- > 0) {
                int n = sc.nextInt();
                int a = sc.nextInt();
                int k = sc.nextInt();
                String s = sc.next();  
                int sum = a;
                int maxOnline = a;
                int totalOnline = a;
                for (int i = 0; i < k; i++) {
                    if (s.charAt(i) == '+') {
                        sum++;
                        totalOnline++;
                    } else {
                        sum--;
                    }
                    maxOnline = Math.max(maxOnline, sum);
                }
                if (maxOnline == n) {
                    System.out.println("YES");
                } else if (totalOnline < n) {
                    System.out.println("NO");
                } else {
                    System.out.println("MAYBE");
                }
            }
        }
    }
}
