import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        try (Scanner sc = new Scanner(System.in)) {
            int t = sc.nextInt(); 
            while (t-- > 0) {
                int n=sc.nextInt();
                int a=sc.nextInt();
                int b=sc.nextInt();
                int ans=n*a;
                if(b<2*a){
                    ans=(n/2)*b+(n%2)*a;
                }
                System.out.println(ans);
            }
        }
    }
}
