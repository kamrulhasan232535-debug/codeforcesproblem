#include <stdio.h>
#include<math.h>
int main() {
    int t;
    scanf("%d",&t);
    while(t--){
        int x;
        scanf("%d",&x);
        int u; int c1=0,c0=0;
        for(int i=0 ; i<2*x; i++){
            scanf("%d",&u);
            if(u==0){
                c0++;
            }
        }c1=2*x-c0;
        int min=(c0%2==0)?0:1;
        int max=fmin(c0,c1);
        printf("%d ",min);
        printf("%d\n",max);
    }
}

