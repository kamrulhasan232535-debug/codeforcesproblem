import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        try (Scanner sc = new Scanner(System.in)) {
            int t = sc.nextInt();  
            sc.nextLine(); 
            while (t-- > 0) {
                int n = sc.nextInt();
                sc.nextLine(); 
                String s = sc.nextLine();

                int firstB = -1, lastB = -1;

                for (int i = 0; i < n; i++) {
                    if (s.charAt(i) == 'B') {
                        if (firstB == -1) {
                            firstB = i; 
                        }
                        lastB = i; 
                    }
                }

                if (firstB == -1) {
                    System.out.println(0); 
                } else {
                    System.out.println(lastB - firstB + 1);
                }
            }
        }
    }
}
