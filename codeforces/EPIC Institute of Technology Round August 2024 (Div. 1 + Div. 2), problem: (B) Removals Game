#include <stdio.h>

int main() {
    int T;
    scanf("%d",&T);
    while (T--) {
        int n;
        scanf("%d",&n);
        int a[n],b[n];
        for (int i=0;i<n;i++) {
            scanf("%d",&a[i]);
        }
        for(int i=0;i<n;i++){
            scanf("%d",&b[i]);
        }
        int same=1;
        for(int i=0;i<n;i++){
            if (a[i]!=b[i]){
                same=0;
                break;
            }
        }
        if (same) {
            printf("Bob\n");
            continue;
        }
        same=1;
        for (int i=0;i<n;i++){
            if (a[i]!=b[n-1-i]){
                same=0;
                break;
            }
        }
        if (same) {
            printf("Bob\n");
        } else {
            printf("Alice\n");
        }
    }
    return 0;
}
