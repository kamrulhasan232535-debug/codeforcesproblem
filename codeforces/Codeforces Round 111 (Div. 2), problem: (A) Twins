#include <stdio.h>

int main() {
     int t;
     scanf("%d",&t);
     int array[t];
     for(int i=0; i<t; i++){
         scanf("%d ",&array[i]);
     }for(int i=0; i<t; i++){
         int indx=i;
         for(int j=i+1; j<t; j++){
             indx=(array[indx]<array[j])?j:indx;
         }int temp=array[i];
         array[i]=array[indx];
         array[indx]=temp;
     }
     int sum1=0,sum2=0;
     int c=0;
     for(int i=0; i<t;i++){
        sum1+=array[i];
        for(int j=i+1; j<t;j++){
            sum2+=array[j];
        }
        c++;
        if(sum1>sum2){
            break;
        }else{
            sum2=0;
        }
     }printf("%d\n",c);

}

