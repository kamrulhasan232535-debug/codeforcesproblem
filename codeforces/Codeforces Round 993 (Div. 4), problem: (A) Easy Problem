#include <stdio.h>

int main() {
    int t;
    scanf("%d",&t);
    while(t--){
        int n,c=0;
        scanf("%d",&n);
        for(int i=1; i<=n ; i++){
            for(int j=1; j<=n; j++){
                if((i+j)==n){
                    c++;
                }
            }
        }printf("%d\n",c);
    }
}

