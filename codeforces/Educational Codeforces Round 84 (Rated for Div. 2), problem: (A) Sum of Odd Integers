#include <stdio.h>

int main() {
    int t;
    scanf("%d", &t); 
    
    while (t--) {
        long long n, k;
        scanf("%lld %lld", &n, &k);
        if (k * k <= n && (n % 2 == k % 2)) {
            printf("YES\n");
        } else {
            printf("NO\n");
        }
    }
    
    return 0;
}
