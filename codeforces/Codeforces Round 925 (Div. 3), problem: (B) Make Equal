import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        try (Scanner sc = new Scanner(System.in)) {
            int t = sc.nextInt();  
            while (t-- > 0) {
                int n = sc.nextInt();
                int[] array = new int[n];
                int sum = 0;
                for (int i = 0; i < n; i++) {
                    array[i] = sc.nextInt();
                    sum += array[i];
                }
                if (sum % n != 0) {
                    System.out.println("NO");
                    continue;
                }

                int target = sum / n;  
                int extra = 0;
                boolean possible = true;
                for (int i = 0; i < n; i++) {
                    extra += (array[i] - target);  
                    if (extra < 0) { 
                        possible = false;
                        break;
                    }
                }

                System.out.println(possible ? "YES" : "NO");
            }
        }
    }
}
