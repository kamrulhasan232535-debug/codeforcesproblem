#include <stdio.h>

int main() {
    int n;
    scanf("%d",&n); 
    int array[n];
    int pair[5]={0};
    for (int i=0;i<n;i++) {
        scanf("%d", &array[i]);
        pair[array[i]]++;
    }
    int txi=0;
    txi+=pair[4];
    int min=pair[3] <pair[1] ? pair[3] : pair[1];
    txi+=pair[3]; 
    pair[1]-=min; 
    txi+=pair[2] / 2;
    if (pair[2] % 2 != 0) {
        txi++; 
        pair[1] -= 2; 
    }
    if (pair[1] > 0) {
        txi+=(pair[1]+3)/4; 
    }
    printf("%d\n", txi);
    return 0;
}
