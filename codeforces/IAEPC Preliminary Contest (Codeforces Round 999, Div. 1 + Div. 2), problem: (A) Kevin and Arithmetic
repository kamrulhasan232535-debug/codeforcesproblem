import java.util.Scanner;
 
public class Kamrul {
    public static void main(String[] args) {
        try (Scanner sc = new Scanner(System.in)) {
            short t = sc.nextShort();
 
            while (t-- > 0) {
                int n = sc.nextInt();
                int[] arra = new int[n];
                short c1 = 0, c2 = 0;
 
                for (int i = 0; i < n; i++) {
                    arra[i] = sc.nextInt();
                    if (arra[i] % 2 == 0) {
                        c1++;
                    } else {
                        c2++;
                    }
                }
 
                if (c1 > 0) {
                    System.out.println(1 + c2);
                } else if(c1==0 && c2>0) {
                    System.out.println(c2-1);
                }else{
                    System.out.println(0);
                }
            }
        }
    }
}
