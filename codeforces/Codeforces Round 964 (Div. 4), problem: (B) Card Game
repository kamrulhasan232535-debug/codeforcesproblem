#include <stdio.h>
int f(int a, int b){
    if(a>b) return 1;
    if (a==b) return 0;
    if (a<b) return -1;
}
int main(){
    int t;
    scanf("%d",&t);
    while(t--){
        int a,b,c,d;
        scanf("%d %d %d %d",&a,&b,&c,&d);
        int cnt=0;
        if (f(a,c)+f(b,d)>0){
            cnt+=1;
        }if (f(a,d)+f(b,c)>0){
            cnt+=1;
        }if (f(b,c)+f(a,d)>0){
            cnt+=1;
        }if (f(b,d)+f(a,c)>0){
            cnt+=1;
        }
        printf("%d\n",cnt);
    }
}

