#include <stdio.h>
#include <string.h>

int main() {
    int t;
    scanf("%d", &t);
    
    while (t--) {
        int n;
        scanf("%d", &n);
        
        char str[1001];
        scanf("%s", str);
        
        int count[256] = {0};
        for (int i = 0; str[i] != '\0'; i++) {
            count[str[i]]++;
        }

        char max_char = 'a';
        int max_count = count[max_char];
        for (int i = 0; i < 256; i++) {
            if (count[i] > max_count) {
                max_char = i;
                max_count = count[i];
            }
        }

        for (int i = 0; i < n; i++) {
            putchar(max_char);
        }
        putchar('\n');
    }

    return 0;
}
