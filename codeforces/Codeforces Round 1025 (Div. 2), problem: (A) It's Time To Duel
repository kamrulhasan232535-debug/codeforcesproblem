#include <bits/stdc++.h>
using namespace std;

int main() {
    int n;
    cin >> n;
    
    while (n--) {
        int a;
        cin >> a;

        vector<int> v(a);
        for (int i = 0; i < a; i++) {
            cin >> v[i];
        }

        int zeros = count(v.begin(), v.end(), 0); 
        if (zeros == 0) {
            cout << "YES\n"; 
        } else {
            bool liar = false;
            for (int i = 0; i < a - 1; i++) {
                if (v[i] == 0 && v[i + 1] == 0) {
                    liar = true;
                    break;
                }
            }

            if (liar) cout << "YES\n";
            else cout << "NO\n";
        }
    }

    return 0;
}
