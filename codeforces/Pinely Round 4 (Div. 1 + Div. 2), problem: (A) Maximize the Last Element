import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int t = sc.nextInt();
        
        while (t-- > 0) {
            int n = sc.nextInt();
            int[] a = new int[n + 1];
            
            for (int i = 1; i <= n; i++) {
                a[i] = sc.nextInt();
            }
            
            int max_value = 0;
            for (int i = 1; i <= n; i += 2) {
                max_value = Math.max(max_value, a[i]);
            }
            
            System.out.println(max_value);
        }
        
        sc.close();
    }
}
