#include <stdio.h>

void solve() {
    long long single, poly, uni;
    scanf("%lld %lld %lld", &single, &poly, &uni);

    long long extraPoly = (3 - poly % 3) % 3;
    if (poly > 0 && extraPoly > uni) {
        printf("-1\n");
        return;
    }

    uni -= extraPoly;
    poly += extraPoly;

    long long result = single + (uni / 3) + (uni % 3 + 1) / 2 + (poly / 3);
    printf("%lld\n", result);
}

int main() {
    int T;
    scanf("%d", &T);
    while (T--) {
        solve();
    }
    return 0;
}
