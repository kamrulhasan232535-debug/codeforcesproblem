import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        try(Scanner sc = new Scanner(System.in)){
        int t = sc.nextInt();
        while (t-- > 0) {
            int n = sc.nextInt();
            int x=sc.nextInt();
            int a=n;
            int b=x;
            while(x!=0){
                int temp=x;
                x=n%x; n=temp;
            }long sum= a*b;
            System.out.println((sum/n));
        }

        sc.close();
    }
        
    }
}
