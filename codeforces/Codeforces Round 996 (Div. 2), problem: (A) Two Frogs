import java.util.Scanner;

public class Main{
    public static void main(String[] args){
        try( Scanner sc= new Scanner(System.in)){
            int  t= sc.nextInt();
            while(t-->0){
                int n=sc.nextInt();
                int a=sc.nextInt();
                int b=sc.nextInt();
                System.out.println((a%2==b%2)?"YES":"NO");
            }
        }
    }
}
