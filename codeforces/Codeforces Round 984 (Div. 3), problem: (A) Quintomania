#include <stdio.h>
#include<math.h>

int main() {
	int t,x;
	scanf("%d",&t);
	while(t--){
	    scanf("%d",&x);
	    int array[x];
	    for(int i=0; i<x; i++){
	        scanf("%d",&array[i]);
	    }int flag=1;
	    for(int i=1; i<x; i++){
	        if(abs(array[i]-array[i-1])!=5 && abs(array[i]-array[i-1])!=7){
	            flag=0;
	            break;
	            
	        }
	    }printf("%s\n",(flag)?"YES":"NO");
	}

}

