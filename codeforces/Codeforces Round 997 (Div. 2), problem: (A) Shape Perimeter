#include <stdio.h>

void solve() {
    int n, m;
    scanf("%d %d", &n, &m);

    int x[1000], y[1000]; 
    int sum_x = 0, sum_y = 0;

    for (int i = 0; i < n; i++) {
        scanf("%d %d", &x[i], &y[i]);
        sum_x += x[i];
        sum_y += y[i];
    }

    int ans = 2 * (sum_x + sum_y + m - x[0] + m - y[0]);
    printf("%d\n", ans);
}

int main() {
    int t;
    scanf("%d", &t);

    while (t--) {
        solve();
    }

    return 0;
}
