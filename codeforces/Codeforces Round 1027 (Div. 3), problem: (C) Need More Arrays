#include <iostream>
#include <vector>

using namespace std;

int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    while (t--) {
        int n;
        cin >> n;
        vector<int> a(n);
        for (int i = 0; i < n; ++i) {
            cin >> a[i];
        }
        int res = 0;
        int prev = -1; 
        for (int i = 0; i < n; ++i) {
            if (prev == -1 || prev + 1 < a[i]) {
                res++;
                prev = a[i];
            }
        }
        cout << res << '\n';
    }
    return 0;
}
