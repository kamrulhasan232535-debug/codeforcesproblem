#include <stdio.h>
#include <string.h>

int main() {
    int t;
    scanf("%d", &t);
    while (t--) {
        int n, a,b,c;
        scanf("%d %d %d %d",&n,&a,&b,&c);
        int sum =0;
        if(n>=a){
            sum+=a;
            int d=n-a;
            if(d>=c){
             sum+=c;
             c=0;
            }else{
                sum+=d;
                c-=d;
            }
            
        }else{
            sum+=n;
        }if(n>=b){
            sum+=b;
            int d=(n-b);
            if(d>=c){
             sum+=c;
             c=0;
            }else{
                sum+=d;
                c-=d;
            }
        }else{
            sum+=n;
        }if(c<0){
            sum-=c;
        }printf("%d\n",sum);
    }
    return 0;
}
