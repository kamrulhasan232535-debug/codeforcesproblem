#include <bits/stdc++.h>
using namespace std;

int main()
{
	int t; cin >> t;
	while(t--){
        int n , k; cin >> n >> k;
        if(n < k || k == 1) cout << n << endl;
        else{
            int cnt = 0;
            while(n){
                cnt = (n%k) + cnt;
                n /= k;
            }
            cout << cnt << endl;
        }
	}

    return 0;
}
