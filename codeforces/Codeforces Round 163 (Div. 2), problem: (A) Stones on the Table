#include <stdio.h>
#include <string.h>
#include<ctype.h>
int main() {
    int n;
    scanf("%d\n",&n);
	char s[n];
	scanf("%s",s);
	int r=1,g=1,b=1,ans=0;
	for(int i=0; i<n; i++){
	    if(s[i]=='R' && s[i+1]=='R'){
	        r++;
	    }if(s[i]=='B' && s[i+1]=='B'){
	        b++;
	    }if(s[i]=='G' && s[i+1]=='G'){
	        g++;
	    }
	}ans+=(g>1)?g-1:0;
	ans+=(b>1)?b-1:0;
	ans+=(r>1)?r-1:0;
	printf("%d\n",ans);
}

