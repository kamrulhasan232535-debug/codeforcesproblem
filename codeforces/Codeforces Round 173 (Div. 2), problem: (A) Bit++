#include <stdio.h>
#include <string.h>
int main() {
    int t;
    scanf("%d", &t);
    char s[4];
    int ans = 0;
    for (int i = 0; i < t; i++) {
        scanf("%s\n",s);
        if(strcmp(s,"X++")==0 || strcmp(s,"++X")==0 ){
            ans++;
        }else{
            ans--;
        }
    }
    printf("%d\n", ans);
    return 0;
}
