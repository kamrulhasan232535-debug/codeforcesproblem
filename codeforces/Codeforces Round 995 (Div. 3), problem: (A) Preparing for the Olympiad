import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int t = sc.nextInt();
        while (t-- > 0) {
            int n = sc.nextInt();
            int[] a = new int[n];
            int[] b = new int[n];
            for (int i = 0; i < n; i++) {
                a[i] = sc.nextInt();
            }
            for (int i = 0; i < n; i++) {
                b[i] = sc.nextInt();
            }
            int ans = a[n - 1];
            for (int i = 0; i < n - 1; i++) {
                ans += Math.max(0, a[i] - b[i + 1]);
            }
            System.out.println(ans);
        }

        sc.close();
    }
}
