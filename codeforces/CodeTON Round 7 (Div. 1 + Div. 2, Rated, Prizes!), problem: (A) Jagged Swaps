import java.util.Scanner;
public class Main{
    public static void main(String[] args){
        try(Scanner sc=new Scanner(System.in)){
            int t=sc.nextInt();
            while(t-->0){
                int n=sc.nextInt();
                int[] array=new int [n];
                for(int i=0; i<n; i++){
                    array[i]=sc.nextInt();
                }if(array[0]==1){
                    System.out.println("YES");
                    
                }else{
                    System.out.println("NO");
                }
            }
        }
    }
}

