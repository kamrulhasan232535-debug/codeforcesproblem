#include <stdio.h>

int main(){
    int t;
    scanf("%d",&t);
    while(t--){
        int n;
        scanf("%d",&n);
        int mx=0;
        int mn=1000000;
        for(int i=0; i<n;i++){
            int x;
            scanf("%d",&x);
            if (x>mx){
                mx=x;
            }
            if(x<mn){
                mn=x;
            }
        }
        printf("%d\n",(mx-mn)*(n-1));
    }
    return 0;
}
