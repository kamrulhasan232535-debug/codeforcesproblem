#include <stdio.h>
#include <stdint.h>

int64_t gcdll(int x, int y) {
    while (y) {
        int t = x % y;
        x = y;
        y = t;
    }
    return x;
}

int main() {
    int t;
    scanf("%d", &t);
    while (t--) {
        long long a, b;
        scanf("%lld %lld", &a, &b);
        long long g = gcdll(a, b);
        long long l = (a / g) * b; 
        if (l == b) {
            long long ans = b * (b / a);
            printf("%lld\n", ans);
        } else {
            printf("%lld\n", l);
        }
    }
    return 0;
}
