import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int t = sc.nextInt();
        while (t-- > 0) {
            int n = sc.nextInt();
            int ans=0;
            ans+=n/4;
            n-=(ans*4);
            ans+=n/2;
            System.out.println(ans);
            
        }

        sc.close();
    }
}
